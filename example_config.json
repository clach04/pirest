{
    "auth": {
        "test_token": "Demo token name/description"
    },

    "config": {
        "#debug": true,
        "#host": "0.0.0.0",
        "#port": 8080,
        "#ssl_context": "adhoc",
        "#ssl_context": ["cert.pem", "key.pem"]
    },

    "mqtt": {
        "mqtt_broker": "localhost",
        "mqtt_port": 1883
    },

    "urls": {
        "led_17": {
            "#comment1": "/led_17/ will fail, but /led_17 will work for URL",
            "mqtt": {"topic": "led_17", "message": "toggle"}
        },

        "something/led_27": {
            "#comment1": "/something/led_27/ will fail, but /something/led_27 will work for URL",
            "mqtt": {"topic": "something/led_27", "message": "flash"}
        },

        "tv_remote/on": {
            "mqtt": {"topic": "tv_remote/on", "message": "on"}
        },

        "tv_remote/off": {
            "mqtt": {"topic": "tv_remote/off", "message": "off"}
        },

        "garage": {
            "status": {
                "close": {"topic": "garage", "message": "close"},
                "open": {"topic": "garage", "message": "open"}
            },
            "#comment_url1": "curl http://localhost:8080/garage?action=open",
            "#comment_url2": "curl http://localhost:8080/garage?action=close",
            "#comment_url2": "curl http://localhost:8080/garage?action=status",
            "#comment_1": "allow control from https://github.com/mwarning/trigger"
        }
    }
}
